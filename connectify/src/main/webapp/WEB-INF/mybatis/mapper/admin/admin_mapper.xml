<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
			"-//mybatis.org//DTD mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
			
<mapper namespace="admin_mapper">

	<select id="findAdminList" resultType="Admin">
		SELECT * FROM CON_T_ADMIN
		ORDER BY id
	</select>
	
	<select id="findAdminId" resultType="Admin" parameterType="String">
		SELECT * FROM CON_T_ADMIN
		WHERE id = #{id}
	</select>
	
	<select id="checkAdminLogin" resultType="Admin" parameterType="Admin">
		SELECT * FROM CON_T_ADMIN
		WHERE id = #{id} AND pw = #{pw}
	</select>
	
	
	<!-- User -->
	
	<select id="findAdminUserList" resultType="AdminUser">
		SELECT * FROM CON_T_USER
		ORDER BY id
	</select>
	
	<select id="findAdminUserById" resultType="AdminUser">
		SELECT * FROM CON_T_USER
		WHERE id = #{id}
	</select>
	
	<select id="findAdminUserListBySearch" resultType="AdminUser" parameterType="AdminUserSearch">
		SELECT * 
		FROM CON_T_USER
		<where>
			<if test=" searchKeywordUser != null and searchKeywordUser != '' ">
				name LIKE '%' || #{searchKeywordUser} || '%'
			</if>
		</where>
		ORDER BY id
	</select>
	
	
	<!-- issues -->
	<select id="findAdminIssuesList" resultType="AdminUser">
		SELECT * FROM CON_T_INQUIRE
		ORDER BY id
	</select>
	
	
	
</mapper>